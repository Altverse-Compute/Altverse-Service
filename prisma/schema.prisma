generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Account {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  password String
  role Role @default(USER)
  profile Profile?
  session Session?
}

model Profile {
  id     String    @id @default(auto()) @map("_id") @db.ObjectId
  accessories String[]
  account   Account   @relation(fields: [accountId], references: [id])
  accountId String    @db.ObjectId @unique
  highest Json
  vp Int @default(0)
}

model Session {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  account   Account   @relation(fields: [accountId], references: [id])
  accountId String    @db.ObjectId @unique
  token String
  expiresAt Int
  world String?
  area Int?
  x Float?
  y Float?
}

enum Role {
  USER
  MOD
  DEV
}